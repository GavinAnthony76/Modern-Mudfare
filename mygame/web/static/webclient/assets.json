  "_instructions": {
    "how_to_download": [
      "1. Visit https://opengameart.org/",
      "2. Search for 'LPC' or the specific asset name",
      "3. Download PNG files",
      "4. Extract to matching folder (sprites/, tiles/, audio/, etc.)",
      "5. Make sure filenames match the 'src' paths in this JSON"
    ],
    "filename_requirements": [
      "Must be lowercase with underscores",
      "PNG for sprites/tilesets (recommended)",
      "OGG or MP3 for music (OGG preferred for web)",
      "WAV for sound effects"
    ],
    "priority_downloads": [
      "HIGH: player.png, npc_priest.png, npc_merchant.png, npc_elder.png",
      "HIGH: palace/floor1/indoor_tileset.png",
      "HIGH: enemies/deceiver.png, enemies/demon.png",
      "MEDIUM: items/*.png sprites",
      "MEDIUM: audio/music/*.ogg files",
      "LOW: ui/ elements and fonts"
    ]
  }
